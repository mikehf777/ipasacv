source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'will_paginate'
gem 'devise'
gem 'jquery-rails'
gem "paperclip", "~> 3.0"
gem 'admin_interface'

# Gems used in development environment
group :development do
	gem 'sqlite3'
	gem "rspec-rails", "~> 2.0"
	gem 'annotate', '~> 2.4.1.beta'
end

# Gems used in test environment
group :test do
	gem "rspec-rails", "~> 2.0"
	gem 'webrat'
end

# Gems used in production environment
group :production do
	gem 'thin'
	gem 'pg', '0.12.2'
end

# Gems used only for assets
group :assets do
	gem 'sass-rails',   '~> 3.2.3'
	gem 'coffee-rails', '~> 3.2.1'
	gem 'bootstrap-sass'
	gem 'bootswatch-rails'
	gem 'sprockets', '~> 2.0'
	gem 'uglifier', '>= 1.0.3'
	gem 'simple_form'	
	# gem 'fancybox-rails'
	gem 'fancybox-rails', :git => 'https://github.com/sverigemeny/fancybox-rails'
end
